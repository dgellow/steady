{
  "workspace": [
    "./packages/parser",
    "./packages/shared",
    "./packages/oas-extract"
  ],
  "imports": {
    "@steady/parser": "./packages/parser/mod.ts",
    "@steady/shared": "./packages/shared/mod.ts",
    "@std/dotenv": "jsr:@std/dotenv@^0.218.0",
    "@std/cli": "jsr:@std/cli@^0.218.0"
  },
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-net --allow-env --allow-write cmd/steady.ts --auto-reload",
    "start": "deno run --allow-read --allow-net --allow-env --allow-write cmd/steady.ts",
    "check": "deno check **/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check-boundaries": "deno run --allow-read scripts/check-boundaries.ts",
    "test-all": "deno fmt && deno check cmd/steady.ts && deno lint --quiet && deno task check-boundaries",
    "extract": "deno run --allow-read --allow-write --allow-net --allow-env cmd/oas-extract.ts extract"
  },
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-ts-comment",
        "no-explicit-any"
      ]
    },
    "exclude": ["oas-tools/**"]
  }
}
