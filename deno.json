{
  "name": "@steady/cli",
  "version": "0.1.0",
  "license": "Elastic-2.0",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cmd/steady.ts"
  },
  "publish": {
    "include": [
      "mod.ts",
      "cmd/steady.ts",
      "src/**/*.ts",
      "packages/**/*.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/test-suite/**",
      "**/fixtures/**",
      "test-fixtures/**",
      "tests/**",
      "scripts/**",
      "docs/**",
      "packages/oas-extract/**"
    ]
  },
  "workspace": [
    "./packages/*"
  ],
  "imports": {
    "@steady/openapi": "./packages/parser/mod.ts",
    "@steady/shared": "./packages/shared/mod.ts",
    "@steady/json-schema": "./packages/json-schema/mod.ts",
    "@steady/json-pointer": "./packages/json-pointer/mod.ts",
    "@steady/oas-extract": "./packages/oas-extract/mod.ts",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/cli": "jsr:@std/cli@^1.0.24",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/yaml": "jsr:@std/yaml@^1.0.10"
  },
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-net --allow-env --allow-write cmd/steady.ts --auto-reload",
    "start": "deno run --allow-read --allow-net --allow-env --allow-write cmd/steady.ts",
    "check": "deno check **/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check-boundaries": "deno run --allow-read scripts/check-boundaries.ts",
    "test": "deno test --allow-read --allow-write --allow-net --allow-env",
    "test:watch": "deno test --allow-read --allow-write --allow-net --allow-env --watch",
    "test:coverage": "deno test --allow-read --allow-write --allow-net --allow-env --coverage=coverage && deno coverage coverage",
    "test:json-schema": "deno test --allow-read --allow-write --allow-net --allow-env packages/json-schema/**/*.test.ts",
    "test:parser": "deno test --allow-read --allow-write --allow-net --allow-env packages/parser/**/*.test.ts",
    "test:json-pointer": "deno test --allow-read --allow-write --allow-net --allow-env packages/json-pointer/**/*.test.ts",
    "test:integration": "deno test --allow-read --allow-write --allow-net --allow-env tests/**/*.test.ts",
    "test:edge-cases": "deno test --allow-read --allow-write --allow-net --allow-env tests/edge-cases/**/*.test.ts",
    "test:suite": "deno run --allow-read packages/json-schema/test-suite-runner.ts",
    "test:specs": "deno run --allow-read --allow-write scripts/test-openapi-directory.ts",
    "analyze": "deno run --allow-read --allow-write scripts/analyze-specs.ts",
    "test-all": "deno fmt && deno check cmd/steady.ts && deno lint --quiet && deno task check-boundaries && deno task test",
    "extract": "deno run --allow-read --allow-write --allow-net --allow-env cmd/oas-extract.ts extract",
    "publish": "deno publish",
    "publish:dry": "deno publish --dry-run",
    "build:npm": "deno run -A scripts/build-npm.ts"
  },
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "fmt": {
    "exclude": ["packages/json-schema/test-suite/", "tests/fixtures/"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-ts-comment",
        "no-explicit-any"
      ]
    },
    "exclude": ["oas-tools/**", "packages/json-schema/test-suite/"]
  }
}
